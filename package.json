{
  "name": "dotabod",
  "private": true,
  "workspaces": [
    "packages/prisma",
    "packages/settings",
    "packages/twitch/events",
    "packages/twitch/chat",
    "packages/dota"
  ],
  "scripts": {
    "up": "yarn upgrade-interactive --latest",
    "studio": "doppler run -- yarn prisma studio --schema ./packages/prisma/src/postgres.prisma",
    "build": "yarn workspaces run build",
    "lint": "yarn eslint -- . && yarn prettier -- . && echo 'Linting complete.'",
    "prettier": "prettier --write",
    "eslint": "eslint --fix --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx",
    "nps": "doppler run -- bash services/mongodb/updatenps.sh",
    "exportnps": "doppler run -- bash services/mongodb/export.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "5.2.0",
    "@supabase/supabase-js": "^2.33.1",
    "@twurple/api": "6.0.9",
    "@twurple/auth": "6.0.9",
    "@twurple/chat": "6.0.9",
    "i18next": "^22.4.15",
    "i18next-fs-backend": "^2.1.1",
    "socket.io": "^4.7.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|json|css|md)": [
      "yarn prettier"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "yarn eslint"
    ]
  }
}
