{
  "compilerOptions": {
    /* Basic Options */
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "types": [
      "node"
    ],
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./.eslintrc.cjs"
  ],
  "ts-node": {
    "esm": true,
    "files": false,
    "transpileOnly": true,
    "typeCheck": false,
    "require": [
      "tsconfig-paths/register"
    ],
    "ignore": [
      "(?:^|/)node_modules/"
    ]
  }
}
